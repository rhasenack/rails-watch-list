<div class="container">
<h1 class="text-center"> <%= @list.name %></h1>
<!-- Button trigger modal -->

<div class="buttons-box mb-4">
  <button type="button" class="btn btn-primary mr-4" data-toggle="modal" data-target="#newBookmarkModal">
    Add Bookmark
  </button>


  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editList">
    Edit List
  </button>
</div>

<!-- Modal -->
<div class="modal fade" id="newBookmarkModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <%= render 'newModalBookmark', list: @list, bookmark: @bookmark%>
</div>

<!-- Modal -->
<div class="modal fade" id="editList" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <%= render 'newModalForm', list: @list%>
</div>


  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-12 align-self-center">
        <div class="movie-card" data-aos="fade-up" style="background-image:linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.83)),
          url('<%= movie.poster_url %>');">
          <div class="vertical-flex">
            <div class="pseudo-element"></div>
            <div><h2 class='card-title'><%= movie.title %></h2></div>
            <div><i class="fas fa-star"></i> <%= movie.rating %></div>
            <div><p class='card-overview'><%= movie.overview %></p></div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="col-12 align-self-center">
      <a href="" data-toggle="modal" data-target="#newBookmarkModal">
        <div class="movie-card" data-aos="fade-up" style="background-image:linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.83));">
          <div class="vertical-flex">
            <div><h2 class='add-movie text-center'>Add Movie</h2></div>
          </div>
        </div>
      </a>
    </div>
  </div>
</div>
